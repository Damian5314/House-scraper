# WoningSpotters Environment Variables
# Copy this file to .env.local and fill in your values

# ===================
# SUPABASE
# ===================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=your_publishable_key_here
SUPABASE_SECRET_KEY=your_secret_key_here

# ===================
# APIFY (voor woningen scrapen)
# ===================
APIFY_API_TOKEN=your_apify_token_here
# Optional: Custom Apify Actor ID (defaults to dtrungtin/funda-scraper)
# APIFY_ACTOR_ID=your_actor_id

# ===================
# RESEND (voor nieuwsbrief emails)
# ===================
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxx

# ===================
# MOLLIE (betalingen)
# ===================
# Get your API key from https://mollie.com/dashboard
# Use test_ key for testing, live_ key for production
MOLLIE_API_KEY=test_xxxxxxxxxxxx

# ===================
# SITE CONFIG
# ===================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=https://woningspotter.com

# ===================
# NEWSLETTER (beveiligingssleutel voor versturen)
# ===================
# Generate a random string for protecting the send endpoint
NEWSLETTER_API_KEY=your_secret_newsletter_key_here
